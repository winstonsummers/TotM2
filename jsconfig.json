{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "src/*": ["./src/*"],
      "assets/*": ["./src/assets/*"],
      "logic/*": ["./src/logic/*"],
      "redux/*": ["./src/redux/*"],
      "views/*": ["./src/views/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 200,
  "editor.minimap.showSlider": "always",
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.cursorBlinking": "phase",
  "files.trimTrailingWhitespace": true
}